
@{
    ViewBag.Title = "PhanHoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3layouts-breadcrumbs text-center">
    <div class="container">
        <span class="agile-breadcrumbs"><a href="index.html"><i class="fa fa-home home_1"></i></a> / <span>Phản hồi</span></span>
    </div>
</div>
<!-- //breadcrumbs -->
<!-- Feedback -->
<div class="feedback main-grid-border">
    <div class="container">
        <h2 class="w3-head">Phản hồi</h2>
        <div class="feed-back">
            <h3>Hãy cho chúng tôi biết bạn nghĩ về chúng tôi</h3>
            <p>Cho có thôi chứ chả ai quan tâm bạn nghĩ gì đâu</p>
            <div class="feed-back-form">
                <form>
                    <span>Thông tin của bạn</span>
                    <input type="text" value="First Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Họ và tên đệm';}">
                    <input type="text" value="Last Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tên';}">
                    <input type="text" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}">
                    <input type="text" value="Phone No" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Số điện thoại';}">
                    <span>Bất cứ điều gì bạn muốn nói với chúng tôi?</span>
                    <textarea onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Thông điệp...';}" required="">Thông điệp...</textarea>
                    <input type="submit" value="submit">
                </form>
            </div>
        </div>
    </div>
</div>
<!-- // Feedback -->
