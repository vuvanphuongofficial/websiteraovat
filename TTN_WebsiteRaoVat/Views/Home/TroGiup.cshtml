    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumbs -->
<div class="w3layouts-breadcrumbs text-center">
    <div class="container">
        <span class="agile-breadcrumbs"><a href="/Home"><i class="fa fa-home home_1"></i></a> / <span>Trợ giúp</span></span>
    </div>
</div>
